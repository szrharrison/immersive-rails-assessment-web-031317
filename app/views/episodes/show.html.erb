<h1>Episode <%= @episode.number %></h1>
<h3>Aired on: <%= @episode.date %></h3>

<h5>Guests:</h5>
<% @episode.guests.each do |guest| %>
  <p><%= link_to guest.name, guest %></p>
<% end %>

<p><strong>Add Guest Appearance:</strong></p>
<%= form_tag '/appearances' do %>
  <%= hidden_field_tag :'appearance[episode_id]', "#{@episode.id}" %>
  <%= label_tag :'appearance[guest_id]', 'Guest' %>
  <%= select_tag :'appearance[guest_id]', options_from_collection_for_select( @guests, 'id', 'name' ) %><br>
  <br>
  <%= label_tag :'appearance[rating]', 'Rating' %>
  <%= number_field_tag :'appearance[rating]', nil, in: 1..5 %> <br>
  <br>
  <%= submit_tag 'Create Appearance' %>
<% end %>
