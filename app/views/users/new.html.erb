<h1>Sign Up:</h1>
<% unless @user.errors.empty? %>
  <% @user.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>
<%= form_for @user do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %> <br>
  <br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <br>
  <%= submit_tag 'Sign Up' %>
<% end %>
